# Set command prompt options
PS1="\n\u @\h [\d \@]\n\w "

# Enable command prompt coloring
export CLICOLOR=1

# Set vim as default editor
export EDITOR='vim'

# Have command line run in vi mode
set -o vi

# Enable homebrew-installed bash completion
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi

# Enable nvm (no autoloading because system is iojs)
export NVM_DIR=~/.nvm
. $(brew --prefix nvm)/nvm.sh

# nvm node version shortcuts
alias ns="nvm use system"
alias n10="nvm use v0.10.36"
alias n12="nvm use v0.12"
alias nio="nvm use iojs"

# List top-level npm global modules
alias "ng"="npm -g ls --depth=0"

# Enable aws cli bash completion
complete -C aws_completer aws

# Enable chruby
. /usr/local/share/chruby/chruby.sh

# Enable gem_home
. /usr/local/share/gem_home/gem_home.sh

# Set Ruby version
chruby ruby-2.2.1

# Golang env variables
export GOPATH=/Users/christopherwatson/go/
export GOBIN=$GOPATH/bin
export PATH=$GOPATH/bin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH

# Enable perlbrew
. ~/perl5/perlbrew/etc/bashrc

# Enable z (intelligent directory autojumping)
. `brew --prefix`/etc/profile.d/z.sh

# Copy all .jpeg and .png images in directory to web images "pre" folder
alias ci="cp *.jpg ~/webimages/pre; cp *.png ~/webimages/pre; cp *.jpeg ~/webimages/pre"

# Run all Imageoptim-CLI operations and move optimized images to "post" folder
alias io="n10 && imageoptim -j -a -q -d ~/webimages/pre && mv ~/webimages/pre/* ~/webimages/post"

# Quickly edit dotfiles
alias bp="vim ~/.bash_profile"
alias br="vim ~/.bashrc"
alias tc="vim ~/.tmux.conf"
alias vr="vim ~/.vimrc"

# Backup OSX dotfiles to local directory
alias dfb="cd ~/; cp ~/.bashrc .bash_profile .tmux.conf .vimrc ~/localdotfilesbackup"

# Set database for td (Golang CLI todo list)
export TODO_DB_PATH=$HOME/Dropbox/todo.json

# Go back to previous directory
alias b="cd - "

# Navigate backwards in directories
alias ..="cd .."
alias ...="cd ../../../"
alias ....="cd ../../../../"
alias .....="cd ../../../../../"
alias ......="cd ../../../../../../"

# Clear scrollback (works with tmux)
alias c="clear"

# Open current directory in Finder
alias f="open ."

# Go to Desktop directory
alias d="cd ~/Desktop"

# Go to Downloads directory
alias dl="cd ~/Downloads"

# Go to Home directory
alias h="cd ~/"

# List hidden files
alias lh="ls -d .*"

# Exit shell
alias x="exit"

# Reload shell
alias r=". ~/.bashrc"

# Force delete trash
alias te="sudo rm -rf ~/.Trash/*"

# Run all Homebrew operations
alias bu="brew update; brew upgrade; brew cleanup; brew cask cleanup; brew prune; brew doctor"

# Update all Go packages
alias gu="go get -u all"

# Update global npm packages
alias nu="npm -g update"

# Run all rubygems operations
alias ru="gem update; gem cleanup"

# Install, clean up, and update vim plugins via Vundle
alias vp="vim +PluginInstall +qall; vim +PluginClean +qall; vim +PluginUpdate +qall"

# Daily OS X update
alias du="brew update; brew upgrade; brew cleanup; brew cask cleanup; brew prune; brew doctor; gem update; gem cleanup; npm -g update; vim +PluginInstall +qall; vim +PluginClean +qall; vim +PluginUpdate +qall; go get -u all"
