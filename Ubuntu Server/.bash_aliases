alias ac="sudo apt-get autoclean && sudo apt-get autoremove"
alias au="sudo apt-get -qq update"
alias ba="vim ~/.bash_aliases"
alias br="vim ~/.bashrc"
alias c="clear"
alias dr="sudo shutdown -r now"
alias g="cd /var/www/ghost"
alias gr="service ghost restart"
alias gs="service ghost status"
alias gt="cd /var/www/ghost/content/themes/"
alias h="cd ~/"
alias l="ls"
alias la="ls -la"
alias lh="ls -d .*"
alias ns="service nginx status"
alias nr="service nginx restart"
alias r=". ~/.bashrc"
alias re="nr && gr && dr"
alias su="sudo apt-get update && sudo apt-get upgrade && sudo apt-get update && sudo apt-get dist-upgrade && sudo apt-get update && do-release-upgrade && sudo apt-get update && sudo apt-get autoclean && sudo apt-get autoremove && sudo apt-get update"
alias x="exit"
alias vp="vim +PluginInstall +qall && vim +PluginClean +qall && vim +PluginUpdate +qall"
alias vr="vim ~/.vimrc"
