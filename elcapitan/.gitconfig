[alias]

[apply]
  whitespace = fix

[core]
  autocrlf = false
  attributesfile = ~/.gitattributes
  editor = vim
  excludesfile = ~/.gitignore
  precomposeunicode = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[diff]
  renames = copies
  tool = Kaleidoscope

[diff "bin"]
  textconv = hexdump -v -C

[difftool]
  prompt = false

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[fetch]
  prune = true

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.local

[log]
  date = relative

[merge]
  log = true

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[push]
  default = current
  followTags = true

[rebase]
  autosquash = true

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

