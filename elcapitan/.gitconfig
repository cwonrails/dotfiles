[alias]

[apply]

  whitespace = fix

[core]

  autocrlf = false
  attributesfile = ~/.gitattributes
  editor = vim
  excludesfile = ~/.gitignore
  precomposeunicode = false
  trustctime = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[color]

  ui = auto

[color "branch"]

  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]

  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]

  added = yellow
  changed = green
  untracked = cyan

[diff]

  renames = copies

[diff "bin"]

  textconv = hexdump -v -C

[filter "lfs"]

  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

[help]

  autocorrect = 1

[include]

  path = ~/.gitconfig.local

[log]

  date = relative

[merge]

  log = true

[pager]

  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[pull]

  rebase = true

[push]

  default = current
  followTags = true

[rebase]

  autosquash = true

[url "git@github.com:"]

  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]

  insteadOf = "github:"

[url "git@gist.github.com:"]

  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]

  insteadOf = "gist:"
